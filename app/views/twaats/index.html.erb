<p id="notice"><%= notice %></p>

<h1>Twaats</h1>
<div>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Img url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twaats.each do |twaat| %>
      <tr>
        <td><%= twaat.content %></td>
        <td><img src="<%= twaat.img_url %>" alt="<%= twaat.img_url %>" ></td>
        <td><%= link_to 'Details', user_twaat_path(id: twaat.id),class: "myButton" %></td>
        <td><%= link_to 'Edit', edit_user_twaat_path(id: twaat.id),class: "myButton" %></td>
        <td><%= link_to 'Destroy', user_twaat_path(id: twaat.id),class: "myButton" , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

<%= link_to 'Create a new twaat', new_user_twaat_path,class: "myButton" %>
<%= link_to 'Go back', users_path,class: "myButton" %>